<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral80"
    tools:context="com.Infosys.MainActivity">

    <EditText
        android:id="@+id/dateEnter"
        android:layout_width="244dp"
        android:layout_height="59dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="159dp"
        android:background="@color/purple_200"
        android:ems="10"
        android:hint="Enter Your DOB"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ageText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="302dp"
        android:layout_height="112dp"
        android:background="@color/design_default_color_error"
        android:text="ageTextView"
        android:textAlignment="center"
        android:textColorHint="@color/design_default_color_secondary_variant"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateEnter"
        tools:text="age shows here" />

    <Button
        android:id="@+id/ageButton"
        android:layout_width="183dp"
        android:layout_height="103dp"
        android:layout_marginTop="216dp"
        android:layout_marginBottom="140dp"
        android:background="@color/design_default_color_error"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageText"
        tools:text="Get my age" />
</androidx.constraintlayout.widget.ConstraintLayout>